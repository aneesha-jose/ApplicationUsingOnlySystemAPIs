<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_margin"
    android:animateLayoutChanges="true"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    card_view:cardElevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/item_padding_end"
        android:paddingRight="@dimen/item_padding_end">

        <TextView
            android:id="@+id/tvItemDesc"
            android:layout_width="@dimen/placeholder_author_width"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_margin="@dimen/button_margin"
            android:layout_toEndOf="@+id/cvCircularImage"
            android:layout_toRightOf="@+id/cvCircularImage"
            android:background="@drawable/shimmer_background" />


        <TextView
            android:id="@+id/tvItemHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@+id/tvItemDesc"
            android:layout_marginStart="@dimen/item_margin_bottom"
            android:layout_marginLeft="@dimen/item_margin_bottom"
            android:layout_marginEnd="@dimen/placeholder_margin_end"
            android:layout_marginRight="@dimen/placeholder_margin_end"
            android:layout_marginBottom="@dimen/item_margin_bottom"
            android:layout_toEndOf="@+id/cvCircularImage"
            android:layout_toRightOf="@+id/cvCircularImage"
            android:background="@drawable/shimmer_background" />

        <ImageView
            android:id="@+id/ivAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvItemHeader"
            android:layout_marginStart="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginBottom="@dimen/item_desc_margin_bottom"
            android:src="@drawable/ic_face_black" />

        <TextView
            android:id="@+id/tvItemAuthor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@id/tvItemHeader"
            android:layout_marginStart="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/placeholeder_margin_top"
            android:layout_marginBottom="@dimen/item_desc_margin_bottom"
            android:layout_toEndOf="@+id/ivAuthor"
            android:layout_toRightOf="@+id/ivAuthor"
            android:background="@drawable/shimmer_background" />

        <ImageView
            android:id="@+id/ivPublishedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivAuthor"
            android:layout_marginStart="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginBottom="@dimen/item_desc_margin_bottom"
            android:drawableStart="@drawable/ic_face_black"
            android:drawableLeft="@drawable/ic_face_black"
            android:src="@drawable/ic_event" />

        <TextView
            android:id="@+id/tvPublishedOn"
            style="@style/ItemDescription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/placeholder_text_height"
            android:layout_below="@+id/tvItemAuthor"
            android:layout_marginStart="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/placeholeder_last_margin_top"
            android:layout_marginBottom="@dimen/item_desc_margin_bottom"
            android:layout_toEndOf="@+id/ivPublishedOn"
            android:layout_toRightOf="@+id/ivPublishedOn"
            android:background="@drawable/shimmer_background" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>